# ======================================
# CONFIGURACIÓN BÁSICA DEL SERVIDOR
# ======================================
PORT=5000
NODE_ENV=development  # development/production

# ======================================
# BASE DE DATOS MONGODB
# ======================================
MONGO_URI=mongodb://127.0.0.1:27017/adoptme?directConnection=true&retryWrites=true&w=majority
MONGO_TEST_URI=mongodb://127.0.0.1:27017/adoptme_test  # Para pruebas

# ======================================
# AUTENTICACIÓN JWT
# ======================================
JWT_SECRET=tu_super_secreto_complejo_aqui_123!@#  # Cambia esto por una clave segura
JWT_EXPIRE=1h  # 1 hora de validez
JWT_COOKIE_EXPIRE=30  # 30 días si usas cookies

# ======================================
# CLOUDINARY (Subida de imágenes)
# ======================================
CLOUDINARY_CLOUD_NAME=tu_nombre_real_de_cloud
CLOUDINARY_API_KEY=tu_api_key_real
CLOUDINARY_API_SECRET=tu_api_secret_real
# ======================================
# SEGURIDAD ADICIONAL (Opcional)
# ======================================
CORS_ORIGIN=http://localhost:5173  # URL exacta de tu frontend
RATE_LIMIT_WINDOW=15  # 15 minutos
RATE_LIMIT_MAX=100  # 100 peticiones por ventana

# ======================================
# CORREO ELECTRÓNICO (Si usas nodemailer)
# ======================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_aplicacion  # Usa contraseña de aplicación
EMAIL_FROM=adoptme <no-reply@adoptme.com>